<% layout("layouts/boilerplate.ejs") %>

<div class="row">
    <div class="column-6">
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading text-break">
                <%= err.message %>
            </h4>
            <hr>
            <% if (process.env.NODE_ENV !== "production") { %>
                <p class="text-break">
                    <%= err.stack %>
                </p>
            <% } %>
        </div>
    </div>
</div>

